<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/idProduit"
            android:layout_width="100dp"
            android:layout_height="59dp" />

        <TextView
            android:id="@+id/produitNom"
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:layout_toEndOf="@+id/idProduit"/>

        <TextView
            android:id="@+id/produitPrix"
            android:layout_width="100dp"
            android:layout_height="59dp"
            android:layout_toEndOf="@+id/produitNom"/>

        <Button
            android:id="@+id/produitSupp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Retirer"
            android:onClick="produitSupp"
            android:layout_toEndOf="@+id/produitPrix"/>

    </RelativeLayout>





</LinearLayout>